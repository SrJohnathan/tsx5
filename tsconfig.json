{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM","DOM.Iterable","ES2020"],
    "moduleResolution": "bundler",
    "declaration": true,
    "moduleDetection": "force",
    "sourceMap": true,
    "declarationDir": "dist/types",

    "outDir": "dist",
    "noEmit": false,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["src"
  ],
  "exclude": [
    "__mocks__",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "jest.config.*"
  ]
}